<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_sekolah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Sekolah"
            android:textColor="@color/black"
            android:layout_below="@+id/text_id"
            android:textSize="20dp"/>

        <TextView
            android:layout_below="@+id/text_sekolah"
            android:id="@+id/text_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <TextView
            android:layout_below="@+id/text_alamat"
            android:id="@+id/text_tahun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tahun"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <ImageButton
            android:id="@+id/btn_hapus"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:layout_gravity="center"
            android:backgroundTint="#EC1414"/>

        <ImageButton
            android:layout_marginTop="20dp"
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_hapus"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:backgroundTint="#09EDD8"
            android:src="@drawable/ic_edit" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>